@model IEnumerable<RegionDTO>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Regions</h1>
<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Create">Add Region</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
                <tr>
                    <td>@region.Id</td>
                    <td>@region.Code</td>
                    <td>@region.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Regions" asp-route-id="@region.Id" class="btn btn-light btn-sm">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
</table>