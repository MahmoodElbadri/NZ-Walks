@model IEnumerable<RegionDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary mb-3" asp-controller="Regions" asp-action="Create">Add Region</a>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Code</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
            </tr>
        }
  </tbody>
</table>